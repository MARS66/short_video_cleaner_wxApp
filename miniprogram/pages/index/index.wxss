/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
} 
view{
  width: 100%;
}
.tips{
  padding: 10rpx 0;
}
.tips text{
  
  color: red;
}
.logo{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.logo image{
    width: 60%;
    height: 100rpx;
  }
.input{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.link{
  margin: 20rpx 0;
  width: 100%;
}
.link view{
  text-align: start;
}
a{
  color: #409EFF;
  width: 100%;
  text-align: start;
  word-wrap:break-word;
  word-break:normal; 
}
.support{
width: 100%;
height: 400rpx;
margin: 20rpx 0;
display: flex;
justify-content: space-between;
flex-wrap: wrap;
align-items: center;
}
.support image{
  width: 160rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.input input{
  box-sizing: border-box;
  border:1px solid #409EFF;
  border-radius: 4px;
  text-align: start;
  font-size: 24rpx;
  width: 70%;
  padding: 8rpx;
  height: 70rpx;
}
.button-sp-area{
  width: 30%;
  display: flex;
  justify-content: flex-end;
}
.default{
  box-sizing: border-box;
  border: 1px solid #409EFF;
  background: #409EFF;
  box-sizing: border-box;
  border-radius: 8rpx;
  font-size: 24rpx !important;
  width: 100rpx ;
  height: 70rpx !important;
  margin-left: 20rpx;
  line-height: 70rpx !important;
  text-align: center;
  color: whitesmoke;
}
video{
  margin: 20rpx 0;
  height:100%;
  width: 100%;
  border-radius: 10px;
}
.usermotto {
  margin: 10px 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  justify-content: center;
}
.usermotto text,view{
  width: 100%;
  text-align: center;
  font-size: 0.6rem;
  color: #808080;
}
.share{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 10000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.329);
}
.share-content{
  background: #fff;
  width: 500rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  border-radius: 12rpx;
  /* border: #808080 solid 2rpx; */
}
.share-btns{
  display: flex;
  justify-content: space-between;
}
button{
  font-size: 24rpx !important;
  margin: 0 10rpx;
  height: 50rpx;
  line-height: 50rpx!important;
}
button[type='primary'] {
  /* background-color: #409EFF!important; */
  color: #409EFF !important;
  background-color: inherit !important;
}
button[type='default'] {
  background-color: inherit !important;
  color: #F56C6C !important;
}
.center{
  height: 100%;
  width: 100%;
  position: relative;
}